# SPA Routing - Redirigir todas las rutas a index.html
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Prevenir acceso a archivos sensibles
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

